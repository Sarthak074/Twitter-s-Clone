      <div class="tweets">
        <div class="postingTweets">
          <form
            action="/tweet"
            method="POST"
            style="display: flex; justify-content: flex-start; gap: 20px"
          >
            <img
              src="images/profile.png"
              alt="profile"
              height="40px"
              width="40px"
            />
            <input
              type="text"
              name="tweets"
              id="tweets"
              placeholder="What is happening?!"
              class="inputTweets"
              autocomplete="off"
            />

            <input
              type="submit"
              name="tweet"
              value="Post"
              id="tweet"
              class="post"
            />
          </form>
        </div>
        <% for(let t of tweetItems ) {%>
        <div class="t">
          <img
            src="images/profile.png"
            alt="profile"
            height="40px"
            width="40px"
          />
          <div class="ts">
            <p
              style="
                margin-top: 0;
                color: white;
                font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial,
                  sans-serif;
                font-size: large;
              "
            >
              <%= t.username %>
            </p>
            <p
              style="
                margin-top: 0;
                color: white;
                font-family: Verdana, Geneva, Tahoma, sans-serif;
              "
            >
              <%= t.tweet %>
            </p>
          </div>
        </div>
        <% } %>
      </div>
      <div class="search">
        <input
          type="text"
          name="search"
          id="search"
          placeholder=" search"
          class="sBar"
        />
        <div class="subscribe">
          <h3>Subscribe to Premium</h3>
          <p>
            Subscribe to unlock new features and if eligible, receive a share of
            ads revenue.
          </p>
          <button class="sub">Subscribe</button>
        </div>
      </div>
