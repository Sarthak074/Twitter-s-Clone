        <input
          type="button"
          value="Post"
          name="post"
          id="post"
          role="button"
          class="send"
        />

        <div class="profile">
          <img
            src="images/profile.png"
            alt="profile"
            height="40px"
            width="40px"
          />
          <p style="font-size: medium"><%= username %></p>
          <a href="/logout" role="button">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="25"
              height="25"
              fill="currentColor"
              class="bi bi-box-arrow-right"
              viewBox="0 0 16 16"
